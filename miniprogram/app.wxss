/* 小程序不支持通配符 */
page,view,text,swiper,swiper-item,image,navigator{
  padding:0;
  margin:0;
  box-sizing:border-box;
}

/*  主题颜色  通过变量实现 */
page{
  /* 统一主题颜色 */
  --themeColor:#eb4450;
  /* 统一字体大小: 1px=2rpx   假设设计稿375rpx  */
  font-size: 28rpx;
} 

image{
  width: 100%;
}